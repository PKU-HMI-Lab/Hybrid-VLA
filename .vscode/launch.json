    "version": "0.2.0",
    "configurations": [
        {
            "name": "test",
            "type": "debugpy",
            "request": "launch",
            "program": "${config:TRAIN.ENVIRONMENT}/bin/torchrun",
            "python": "${config:TRAIN.ENVIRONMENT}/bin/python",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--standalone",
                "--nnodes=8",
                "--nproc_per_node=1",
                "train.py",
                "--vla.type=prism-dinosiglip-224px+oxe+diffusion",
                "--vla.data_mix=rlbench",
                "--vla.expected_world_size=8",
                "--vla.global_batch_size=256",
                "--vla.per_device_batch_size=32",
                "--vla.learning_rate=2e-5",
                "--vla.epochs=100",
                "--vla.freeze_vision_backbone=${config:TRAIN.FREEZE_VISION}",
                "--vla.freeze_llm_backbone=${config:TRAIN.FREEZE_LLM}",
                "--data_root_dir=/share/rlds_data/${config:TRAIN.TASK}",
                "--run_root_dir=${workspaceFolder}/runs",
                "--run_id=exp_${config:TRAIN.TASK}_freeze_vit_no_dit_window${config:TRAIN.FUTURE_ACTION_STEPS}_${config:DATE}",
                "--image_aug=false",
                "--wandb_project=cogact",
                "--wandb_entity=2232495392",
                "--save_interval=100",
                "--action_dim=7",
                "--repeated_diffusion_steps=${config:TRAIN.REPEATED_DIFFUSION_STEPS}",
                "--action_tokenizer_exist=${config:TRAIN.ACTION_TOKENIZER_EXIST}",
                "--class_dropout_prob=${config:TRAIN.CLASS_DROPOUT_PROB}",
                "--use_diff=${config:TRAIN.USE_DIFF}",
                "--ar_diff_loss=${config:TRAIN.AR_DIFF_LOSS}",
                "--future_action_window_size=${config:TRAIN.FUTURE_ACTION_STEPS}",
                "--is_resume=False",
            ],
            "env": {
                "WANDB_MODE": "offline",
                "PYTHONPATH": "${workspaceFolder}",
                "HF_HOME": "/share/huggingface",
                "CUDA_VISIBLE_DEVICES": "0,1,2,3,4,5,6,7",
                "PATH": "${config:TRAIN.ENVIRONMENT}/bin:${env:PATH}",
            }
        }
    ]
}